{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server.js" },
    { "source": "/(.*)", "destination": "/dist/index.html" }
  ],
  "redirects": [
    { "source": "/favorites", "destination": "/dist/index.html", "statusCode": 200 },
    { "source": "/ranking", "destination": "/dist/index.html", "statusCode": 200 }
  ]
}
