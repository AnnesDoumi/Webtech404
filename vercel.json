{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server.js" },
    { "source": "/assets/(.*)", "destination": "/dist/assets/$1" },
    { "source": "/(.*).js", "destination": "/$1.js" },
    { "source": "/(.*).css", "destination": "/$1.css" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
